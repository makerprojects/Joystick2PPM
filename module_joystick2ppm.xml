<?xml version="1.0" encoding="UTF-8"?>
<project name="module_joystick2ppm" default="compile.module.joystick2ppm">
  <dirname property="module.joystick2ppm.basedir" file="${ant.file.module_joystick2ppm}"/>
  
  <property name="module.jdk.home.joystick2ppm" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.joystick2ppm" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.joystick2ppm" value="${project.jdk.classpath}"/>

  <property name="compiler.args.joystick2ppm" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>

  <property name="joystick2ppm.output.dir" value="${module.joystick2ppm.basedir}/target/classes"/>
  <property name="joystick2ppm.testoutput.dir" value="${module.joystick2ppm.basedir}/target/test-classes"/>
  
  <path id="joystick2ppm.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="joystick2ppm.module.production.classpath">
    <path refid="${module.jdk.classpath.joystick2ppm}"/>
    <path refid="library.maven:_org.rxtx:rxtx:2.1.7.classpath"/>
    <path refid="library.maven:_net.java.jinput:jinput:2.0.9.classpath"/>
  </path>
  
  <path id="joystick2ppm.runtime.production.module.classpath">
    <pathelement location="${joystick2ppm.output.dir}"/>
    <path refid="library.maven:_org.rxtx:rxtx:2.1.7.classpath"/>
    <path refid="library.maven:_net.java.jinput:jinput:2.0.9.classpath"/>
  </path>
  
  <path id="joystick2ppm.module.classpath">
    <path refid="${module.jdk.classpath.joystick2ppm}"/>
    <pathelement location="${joystick2ppm.output.dir}"/>
    <path refid="library.maven:_org.rxtx:rxtx:2.1.7.classpath"/>
    <path refid="library.maven:_net.java.jinput:jinput:2.0.9.classpath"/>
  </path>
  
  <path id="joystick2ppm.runtime.module.classpath">
    <pathelement location="${joystick2ppm.testoutput.dir}"/>
    <pathelement location="${joystick2ppm.output.dir}"/>
    <path refid="library.maven:_org.rxtx:rxtx:2.1.7.classpath"/>
    <path refid="library.maven:_net.java.jinput:jinput:2.0.9.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.joystick2ppm">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.joystick2ppm">
    <patternset refid="excluded.from.module.joystick2ppm"/>
  </patternset>
  
  <path id="joystick2ppm.module.sourcepath">
    <dirset dir="${module.joystick2ppm.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="joystick2ppm.module.test.sourcepath">
    <dirset dir="${module.joystick2ppm.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.joystick2ppm" depends="compile.module.joystick2ppm.production,compile.module.joystick2ppm.tests" description="Compile module Joystick2PPM"/>
  
  <target name="compile.module.joystick2ppm.production" depends="register.custom.compilers" description="Compile module Joystick2PPM; production classes">
    <mkdir dir="${joystick2ppm.output.dir}"/>
    <javac2 destdir="${joystick2ppm.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.joystick2ppm}/javac">
      <compilerarg line="${compiler.args.joystick2ppm}"/>
      <bootclasspath refid="joystick2ppm.module.bootclasspath"/>
      <classpath refid="joystick2ppm.module.production.classpath"/>
      <src refid="joystick2ppm.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.joystick2ppm"/>
    </javac2>
    
    <copy todir="${joystick2ppm.output.dir}">
      <fileset dir="${module.joystick2ppm.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.joystick2ppm.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.joystick2ppm.tests" depends="register.custom.compilers,compile.module.joystick2ppm.production" description="compile module Joystick2PPM; test classes" unless="skip.tests">
    <mkdir dir="${joystick2ppm.testoutput.dir}"/>
    <javac2 destdir="${joystick2ppm.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.joystick2ppm}/javac">
      <compilerarg line="${compiler.args.joystick2ppm}"/>
      <bootclasspath refid="joystick2ppm.module.bootclasspath"/>
      <classpath refid="joystick2ppm.module.classpath"/>
      <src refid="joystick2ppm.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.joystick2ppm"/>
    </javac2>
    
    <copy todir="${joystick2ppm.testoutput.dir}">
      <fileset dir="${module.joystick2ppm.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.joystick2ppm" description="cleanup module">
    <delete dir="${joystick2ppm.output.dir}"/>
    <delete dir="${joystick2ppm.testoutput.dir}"/>
  </target>
</project>